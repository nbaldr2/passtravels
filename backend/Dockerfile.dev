FROM node:20-alpine

WORKDIR /app

# Install dependencies for development
COPY package*.json ./
RUN npm install

# Copy Prisma schema
COPY prisma ./prisma/

# Generate Prisma Client
RUN npx prisma generate

# Copy source code
COPY . .

# Expose the port
EXPOSE 3000

# Start the application in development mode with hot-reload
CMD ["sh", "-c", "npx prisma migrate deploy && npm run dev"]
